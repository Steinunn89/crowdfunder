<h1><%= @project.name %> </h1>
<h2>Backers:<%= @project.pledges.length %> </h2>

	<br>
	<p> Description: <%= @project.description %></p>
	<p> The goal: $ <%= @project.goal %> </p>
	<p> The amount raised: <%= @project.amount_raised %> </p>
	<p> Backing Deadline: <%= @project.end_date.strftime('%B %e, %Y') %> </p>
	<p> Days left: <%= @project.days_left%> </p>

	<h3>Rewards</h3>

	<% @project.rewards.each do |reward|%>
		<%= link_to new_project_pledge_path(@project, amount: reward.amount) do %>
			<h2> 
				<%= reward.amount %> 
				<%= reward.description %>
			</h2>
		<% end %>
	<% end %>


	<%= link_to "Back To Main Page", projects_url %>